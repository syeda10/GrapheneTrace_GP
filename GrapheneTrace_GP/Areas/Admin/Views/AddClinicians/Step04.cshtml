@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddClinician.Step04ReviewVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="fw-bold mb-4">Add Profile</h2>

<div class="steps-container mb-4">
    <div class="step completed">Step 01</div>
    <div class="step completed">Step 02</div>
    <div class="step completed">Step 03</div>
    <div class="step active">Step 04</div>
</div>

<h4 class="fw-bold mb-3">Step 04 › Review & Confirm</h4>

<div class="card p-3">

    <h5 class="fw-bold">Review All Details Before Submission</h5>

    <p class="text-muted">All data combined from Step 01, Step 02, Step 03</p>

    <hr />

    <h6 class="fw-bold">Reviewed By:</h6>
    <input asp-for="VerifiedBy" class="form-control" placeholder="Admin Name" />

    <h6 class="fw-bold mt-3">Remarks:</h6>
    <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>

</div>

<form asp-action="Step04" asp-controller="AddClinicians" method="post">
    <button class="btn btn-success">Save Clinician Profile</button>
</form>

<style>
    .steps-container {
        display: flex;
        gap: 5px;
    }

    .step {
        flex: 1;
        padding: 10px;
        text-align: center;
        background: #ccc;
        border-radius: 5px;
        font-weight: bold;
    }

        .step.active {
            background: #3b82f6;
            color: white;
        }

        .step.completed {
            background: #10b981;
            color: white;
        }
</style>
