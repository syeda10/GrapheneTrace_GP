@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddClinician.Step03AssignmentsVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="fw-bold mb-4">Clinician Add Profile</h2>

<div class="d-flex mb-4">
    <a class="btn btn-primary me-2">Clinician</a>
    <a class="btn btn-outline-secondary">Patient</a>
</div>

<div class="steps-container mb-4">
    <div class="step completed">Step 01</div>
    <div class="step completed">Step 02</div>
    <div class="step active">Step 03</div>
    <div class="step">Step 04</div>
</div>

<h4 class="fw-bold mb-3">Step 03 › Assignments</h4>

<form asp-action="Step03" method="post">

    <table class="table table-bordered custom-table">
        <thead>
            <tr>
                <th style="width:80px;">S.No</th>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>

        <tbody>

            <tr>
                <td>01</td>
                <td>Assigned Patients (Comma Separated IDs)</td>
                <td>
                    <input asp-for="AssignedPatients" class="form-control" placeholder="2693, 5987, 8963 ..." />
                </td>
            </tr>

            <tr>
                <td>02</td>
                <td>Current Appointments</td>
                <td>
                    <textarea asp-for="CurrentAppointments" class="form-control" rows="3"></textarea>
                </td>
            </tr>

            <tr>
                <td>03</td>
                <td>Assigned Ward</td>
                <td>
                    <input asp-for="AssignedWard" class="form-control" />
                </td>
            </tr>

            <tr>
                <td>04</td>
                <td>Supervisor</td>
                <td>
                    <input asp-for="Supervisor" class="form-control" />
                </td>
            </tr>

            <tr>
                <td>05</td>
                <td>Notes</td>
                <td>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                </td>
            </tr>

        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Step04" class="btn btn-secondary">Next</a>
        <button type="submit" class="btn btn-primary">Proceed →</button>
    </div>

</form>

<style>
    .steps-container {
        display: flex;
        gap: 5px;
    }

    .step {
        flex: 1;
        padding: 10px;
        background: #ccc;
        text-align: center;
        font-weight: bold;
        border-radius: 5px;
    }

        .step.active {
            background: #3b82f6;
            color: white;
        }

        .step.completed {
            background: #10b981;
            color: white;
        }
</style>
