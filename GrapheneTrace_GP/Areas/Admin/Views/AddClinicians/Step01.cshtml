@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddClinician.Step01PersonalVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h2 class="fw-bold mb-4">Clinician Add Profile</h2>

<!-- Toggle -->
<div class="d-flex mb-4">
    <a class="btn btn-primary me-2">Clinician</a>
    <a class="btn btn-outline-secondary" href="#">Patient</a>
</div>

<!-- Step Progress Bar -->
<div class="steps-container mb-4">
    <div class="step active">Step 01</div>
    <div class="step">Step 02</div>
    <div class="step">Step 03</div>
    <div class="step">Step 04</div>
</div>

<h4 class="fw-bold mb-3">Step 01 › Personal Info</h4>

<form method="post" asp-action="Step01">


    @Html.AntiForgeryToken()


    <table class="table table-bordered custom-table">
        <thead>
            <tr>
                <th style="width:80px;">S.No</th>
                <th>Field</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>01</td>
                <td>Last Name</td>
                <td><input asp-for="LastName" class="form-control" required /></td>
            </tr>

            <tr>
                <td>02</td>
                <td>First Name</td>
                <td><input asp-for="FirstName" class="form-control" required /></td>
            </tr>

            <tr>
                <td>03</td>
                <td>Title</td>
                <td>
                    <select asp-for="Title" class="form-select">
                        <option>Mr.</option>
                        <option>Mrs.</option>
                        <option>Miss</option>
                        <option>Dr.</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>04</td>
                <td>Email Address</td>
                <td><input asp-for="Email" type="email" class="form-control" required /></td>
            </tr>

            <tr>
                <td>05</td>
                <td>Phone Number</td>
                <td><input asp-for="Phone" class="form-control" required /></td>
            </tr>

            <tr>
                <td>06</td>
                <td>Gender</td>
                <td>
                    <select asp-for="Gender" class="form-select">
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>07</td>
                <td>Date of Birth</td>
                <td><input asp-for="DateOfBirth" type="date" class="form-control" /></td>
            </tr>

            <tr>
                <td>08</td>
                <td>Upload Photo</td>
                <td><input asp-for="PhotoPath" type="file" class="form-control" /></td>
            </tr>

            <tr>
                <td>09</td>
                <td>Address</td>
                <td><input asp-for="Address" class="form-control" /></td>
            </tr>

            <tr>
                <td>10</td>
                <td>City</td>
                <td><input asp-for="City" class="form-control" /></td>
            </tr>

            <tr>
                <td>11</td>
                <td>Post Code</td>
                <td><input asp-for="PostCode" class="form-control" /></td>
            </tr>

        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Step02" class="btn btn-secondary">Next</a>
        <button type="submit" class="btn btn-primary">Proceed →</button>
    </div>

</form>

<style>
    .steps-container {
        display: flex;
        gap: 5px;
    }

    .step {
        flex: 1;
        padding: 10px;
        text-align: center;
        background: #ccc;
        border-radius: 5px;
        font-weight: bold;
    }

        .step.active {
            background: #3b82f6;
            color: white;
        }

    .custom-table tbody tr:nth-child(odd) {
        background: #f7f7f7;
    }
</style>
