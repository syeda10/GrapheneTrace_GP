@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddPatient.Step02MedicalVM
@{
    ViewData["Title"] = "Patient Add Profile";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Patient Add Profile</h2>

    <div class="btn-group mt-3 mb-3">
        <a href="/Admin/AddClinicians/Step01" class="btn btn-outline-primary">Clinician</a>
        <a href="/Admin/AddPatient/Step01" class="btn btn-primary">Patient</a>
    </div>

    <div class="step-tabs d-flex gap-2 mb-4">
        <a href="/Admin/AddPatient/Step01" class="btn btn-light">Step 01</a>
        <a class="btn btn-primary">Step 02</a>
        <a class="btn btn-light">Step 03</a>
        <a class="btn btn-light">Step 04</a>
    </div>

    <h4 class="fw-bold mt-3">Step 02 › Medical Info</h4>

    <form asp-action="Step02Post" method="post">
        <table class="table table-bordered custom-table">
            <thead>
                <tr>
                    <th style="width:80px;">S.No</th>
                    <th style="width:250px;">Field</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td>01</td>
                    <td>Blood Group</td>
                    <td><input asp-for="BloodGroup" class="form-control" /></td>
                </tr>

                <tr>
                    <td>02</td>
                    <td>Allergies</td>
                    <td><input asp-for="Allergies" class="form-control" /></td>
                </tr>

                <tr>
                    <td>03</td>
                    <td>Conditions</td>
                    <td><input asp-for="Conditions" class="form-control" /></td>
                </tr>

                <tr>
                    <td>04</td>
                    <td>Medications</td>
                    <td><input asp-for="Medications" class="form-control" /></td>
                </tr>

                <tr>
                    <td>05</td>
                    <td>Weight</td>
                    <td><input asp-for="Weight" class="form-control" /></td>
                </tr>

                <tr>
                    <td>06</td>
                    <td>Height</td>
                    <td><input asp-for="Height" class="form-control" /></td>
                </tr>

                <tr>
                    <td>07</td>
                    <td>Smoking</td>
                    <td><input asp-for="Smoking" class="form-control" /></td>
                </tr>

                <tr>
                    <td>08</td>
                    <td>Past Surgeries</td>
                    <td><input asp-for="PastSurgeries" class="form-control" /></td>
                </tr>

                <tr>
                    <td>09</td>
                    <td>Notes</td>
                    <td><textarea asp-for="Notes" class="form-control"></textarea></td>
                </tr>

            </tbody>
        </table>

        <button type="submit" class="btn btn-primary px-5">Next</button>
    </form>
</div>

<style>
    .step-tabs .btn {
        width: 140px;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
    }

    .custom-table th {
        background: #f8f9fa !important;
        font-weight: bold;
    }
</style>
