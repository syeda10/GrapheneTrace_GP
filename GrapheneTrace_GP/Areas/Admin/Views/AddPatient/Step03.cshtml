@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddPatient.Step03AssignmentsVM
@{
    ViewData["Title"] = "Patient Add Profile";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Patient Add Profile</h2>

    <div class="btn-group mt-3 mb-3">
        <a href="/Admin/AddClinicians/Step01" class="btn btn-outline-primary">Clinician</a>
        <a href="/Admin/AddPatient/Step01" class="btn btn-primary">Patient</a>
    </div>

    <div class="step-tabs d-flex gap-2 mb-4">
        <a href="/Admin/AddPatient/Step01" class="btn btn-light">Step 01</a>
        <a href="/Admin/AddPatient/Step02" class="btn btn-light">Step 02</a>
        <a class="btn btn-primary">Step 03</a>
        <a class="btn btn-light">Step 04</a>
    </div>

    <h4 class="fw-bold mt-3">Step 03 › Assignments</h4>

    <form asp-action="Step03Post" method="post">

        <table class="table table-bordered custom-table">

            <thead>
                <tr>
                    <th style="width:80px;">S.No</th>
                    <th style="width:250px;">Field</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td>01</td>
                    <td>Clinician Assigned</td>
                    <td><input asp-for="ClinicianId" class="form-control" /></td>
                </tr>

                <tr>
                    <td>02</td>
                    <td>Ward</td>
                    <td><input asp-for="Ward" class="form-control" /></td>
                </tr>

                <tr>
                    <td>03</td>
                    <td>Department</td>
                    <td><input asp-for="Department" class="form-control" /></td>
                </tr>

                <tr>
                    <td>04</td>
                    <td>Status</td>
                    <td>
                        <select asp-for="Status" class="form-control">
                            <option>Active</option>
                            <option>Inactive</option>
                            <option>Under Treatment</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>05</td>
                    <td>EmergencyContact</td>
                    <td><input asp-for="EmergencyContact" class="form-control" /></td>
                </tr>

            </tbody>

        </table>

        <button type="submit" class="btn btn-primary px-5">Next</button>

    </form>
</div>

<style>
    .step-tabs .btn {
        width: 140px;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
    }

    .custom-table th {
        background: #f8f9fa !important;
        font-weight: bold;
    }
</style>
