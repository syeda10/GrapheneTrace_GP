@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddPatient.Step01PersonalVM
@{
    ViewData["Title"] = "Patient Add Profile";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Patient Add Profile</h2>

    <!-- TOGGLE BUTTONS -->
    <div class="btn-group mt-3 mb-3">
        <a href="/Admin/AddClinicians/Step01" class="btn btn-outline-primary">Clinician</a>
        <a href="/Admin/AddPatient/Step01" class="btn btn-primary">Patient</a>
    </div>

    <!-- STEP TABS (MUST MATCH CLINICIANS) -->
    <div class="step-tabs d-flex gap-2 mb-4">
        <a class="btn btn-primary">Step 01</a>
        <a class="btn btn-light">Step 02</a>
        <a class="btn btn-light">Step 03</a>
        <a class="btn btn-light">Step 04</a>
    </div>

    <h4 class="fw-bold mt-3">Step 01 › Personal Info</h4>

    <!-- MATCH TABLE LAYOUT EXACTLY -->
    <form asp-action="Step01Post" method="post">

        <table class="table table-bordered custom-table">
            <thead>
                <tr>
                    <th style="width: 80px;">S.No</th>
                    <th style="width: 250px;">Field</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>

                <tr>
                    <td>01</td>
                    <td>Title</td>
                    <td>
                        <select class="form-control" asp-for="Title">
                            <option>Mr.</option>
                            <option>Ms.</option>
                            <option>Mrs.</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>02</td>
                    <td>First Name</td>
                    <td><input asp-for="FirstName" class="form-control" /></td>
                </tr>

                <tr>
                    <td>03</td>
                    <td>Last Name</td>
                    <td><input asp-for="LastName" class="form-control" /></td>
                </tr>

                <tr>
                    <td>04</td>
                    <td>Date of Birth</td>
                    <td><input asp-for="DateOfBirth" type="date" class="form-control" /></td>
                </tr>

                <tr>
                    <td>05</td>
                    <td>Gender</td>
                    <td>
                        <select asp-for="Gender" class="form-control">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>06</td>
                    <td>Email</td>
                    <td><input asp-for="Email" class="form-control" /></td>
                </tr>

                <tr>
                    <td>07</td>
                    <td>Phone</td>
                    <td><input asp-for="Phone" class="form-control" /></td>
                </tr>

                <tr>
                    <td>08</td>
                    <td>NHSNumber</td>
                    <td><input asp-for="NHSNumber" class="form-control" /></td>
                </tr>

                <tr>
                    <td>09</td>
                    <td>Address</td>
                    <td><input asp-for="Address" class="form-control" /></td>
                </tr>

                <tr>
                    <td>10</td>
                    <td>City</td>
                    <td><input asp-for="City" class="form-control" /></td>
                </tr>

                <tr>
                    <td>11</td>
                    <td>Post Code</td>
                    <td><input asp-for="PostCode" class="form-control" /></td>
                </tr>

            </tbody>
        </table>

        <button type="submit" class="btn btn-primary px-5">Next</button>

    </form>
</div>

<style>
    .step-tabs .btn {
        width: 140px;
        padding: 10px;
        font-weight: 600;
        text-align: center;
        border-radius: 6px;
    }

    .custom-table th {
        background: #f8f9fa !important;
        font-weight: bold;
    }
</style>
