@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddPatient.Step04ReviewVM
@{
    ViewData["Title"] = "Patient Add Profile";
}

<div class="container-fluid px-4">

    <h2 class="mt-4 fw-bold">Patient Add Profile</h2>

    <div class="btn-group mt-3 mb-3">
        <a href="/Admin/AddClinicians/Step01" class="btn btn-outline-primary">Clinician</a>
        <a href="/Admin/AddPatient/Step01" class="btn btn-primary">Patient</a>
    </div>

    <div class="step-tabs d-flex gap-2 mb-4">
        <a href="/Admin/AddPatient/Step01" class="btn btn-light">Step 01</a>
        <a href="/Admin/AddPatient/Step02" class="btn btn-light">Step 02</a>
        <a href="/Admin/AddPatient/Step03" class="btn btn-light">Step 03</a>
        <a class="btn btn-primary">Step 04</a>
    </div>

    <h4 class="fw-bold mt-3">Step 04 › Review & Verification</h4>

    <form asp-action="Save" method="post">

        <table class="table table-bordered custom-table">

            <thead>
                <tr>
                    <th style="width:80px;">S.No</th>
                    <th style="width:250px;">Field</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>01</td>
                    <td>Verified By</td>
                    <td><input asp-for="VerifiedBy" class="form-control" /></td>
                </tr>

                <tr>
                    <td>02</td>
                    <td>Remarks</td>
                    <td><textarea asp-for="Remarks" class="form-control"></textarea></td>
                </tr>
            </tbody>

        </table>

        <button type="submit" class="btn btn-success px-5">Save Profile</button>

    </form>
</div>

<style>
    .step-tabs .btn {
        width: 140px;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
    }

    .custom-table th {
        background: #f8f9fa !important;
        font-weight: bold;
    }
</style>
