@model AdminProfileVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">

    <h3 class="fw-bold mb-4">Admin Profile > @Model.FullName</h3>

    <div class="row">

        <!-- LEFT SIDE CARD -->
        <div class="col-md-4">
            <div class="card p-3 mb-4">
                <h4 class="text-primary">@Model.FullName</h4>
                <p>Administrator</p>
                <p>@Model.Email</p>
                <p>@Model.Phone</p>
                <p><strong>Admin ID:</strong> @Model.AdminId</p>
            </div>

            <div class="card p-3">
                <h5 class="fw-bold mb-3">Account Settings</h5>

                <div><input type="checkbox" checked="@Model.PasswordChange" /> Password Change</div>
                <div><input type="checkbox" checked="@Model.NotificationPreferences" /> Notification & Preferences</div>
                <div><input type="checkbox" checked="@Model.LanguageTimezone" /> Language & Timezone</div>
                <div><input type="checkbox" checked="@Model.TwoFactorAuth" /> Two-Factor Authentication</div>
                <div><input type="checkbox" checked="@Model.SecurityPrivacy" /> Security & Privacy</div>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="col-md-8">
            <div class="card p-4">
                <h4 class="fw-bold text-center mb-4">Permissions & Roles</h4>

                <label class="fw-bold">Role</label>
                <select class="form-select mb-4" style="width:200px;">
                    <option>Admin</option>
                    <option>Super Admin</option>
                    <option>Manager</option>
                    <option>Viewer</option>
                </select>

                <h5 class="fw-bold mt-3 mb-3">Privileges</h5>

                <div class="row">
                    <div class="col-md-6">
                        <div><input type="checkbox" checked="@Model.EditProfiles" /> Edit Profiles</div>
                        <div><input type="checkbox" checked="@Model.AddProfiles" /> Add Profiles</div>
                        <div><input type="checkbox" checked="@Model.ViewAlerts" /> View Alerts</div>
                        <div><input type="checkbox" checked="@Model.ManageSettings" /> Manage Settings</div>
                    </div>

                    <div class="col-md-6">
                        <div><input type="checkbox" checked="@Model.ViewReports" /> View Reports</div>
                        <div><input type="checkbox" checked="@Model.MessageClinician" /> Message Clinician</div>
                        <div><input type="checkbox" checked="@Model.ViewAppointments" /> View Appointments</div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
