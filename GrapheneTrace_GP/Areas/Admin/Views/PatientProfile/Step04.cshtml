@model GrapheneTrace_GP.Areas.Admin.Models.Patient

<div class="btn-group mb-3">
    <a asp-action="Step01" asp-route-id="@Model.PatientId" class="btn btn-secondary">Step 01</a>
    <a asp-action="Step02" asp-route-id="@Model.PatientId" class="btn btn-secondary">Step 02</a>
    <a asp-action="Step03" asp-route-id="@Model.PatientId" class="btn btn-secondary">Step 03</a>
    <a asp-action="Step04" asp-route-id="@Model.PatientId" class="btn btn-primary">Step 04</a>
</div>

<h3>Step 04 › Review & Save</h3>

<table class="table table-bordered wizard-table">
    <thead>
        <tr><th>S.No</th><th>Field</th><th>Value</th></tr>
    </thead>

    <tbody>
        <tr><td>01</td><td>Name</td><td>@Model.Title @Model.FirstName @Model.LastName</td></tr>
        <tr>
            <td>02</td>
            <td>DOB</td>
            <td>
                @(Model.DateOfBirth?.ToShortDateString() ?? "N/A")
            </td>
        </tr>
        <tr><td>03</td><td>Email</td><td>@Model.Email</td></tr>
        <tr><td>04</td><td>Phone</td><td>@Model.Phone</td></tr>
        <tr><td>05</td><td>NHS Number</td><td>@Model.NHSNumber</td></tr>
        <tr><td>06</td><td>Blood Group</td><td>@Model.BloodGroup</td></tr>
        <tr><td>07</td><td>Department</td><td>@Model.Department</td></tr>
    </tbody>
</table>

<form asp-action="Finish" method="post">
    <input type="hidden" asp-for="PatientId" />
    <button class="btn btn-success">Save Patient</button>
</form>
