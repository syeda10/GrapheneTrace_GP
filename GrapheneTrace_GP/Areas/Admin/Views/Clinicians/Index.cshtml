@model List<GrapheneTrace_GP.Areas.Admin.ViewModels.ClinicianListVM>


   
<style>
    .clinician-container {
        padding: 20px;
    }

    .search-bar {
        margin-bottom: 20px;
        display: flex;
        gap: 10px;
        justify-content: flex-start;
    }

    .table-wrapper {
        max-height: 550px;
        overflow-y: auto;
        border: 1px solid #dcdcdc;
        border-radius: 6px;
    }

    .table-clinicians {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }

        .table-clinicians thead th {
            background: #f5f5f5;
            padding: 12px;
            border-bottom: 2px solid #ccc;
            font-weight: 600;
            text-align: left;
            position: sticky;
            top: 0;
            z-index: 2;
        }

        .table-clinicians tbody td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

        .table-clinicians tbody tr:hover {
            background: #eef5ff;
            cursor: pointer;
        }

    /* Pagination Style */
    .pagination-container {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        gap: 5px;
    }

        .pagination-container a {
            padding: 7px 14px;
            border: 1px solid #007bff;
            border-radius: 4px;
            color: #007bff;
            text-decoration: none;
        }

            .pagination-container a.active {
                background: #007bff;
                color: white;
                font-weight: bold;
            }

            .pagination-container a:hover {
                background: #0056b3;
                color: white;
            }
</style>



<!-- Search bar -->
<div class="search-bar">
    <input type="text" placeholder="Search by name/department" class="form-control" style="width: 300px;" />
    <button class="btn btn-primary">Search</button>
</div>

<div class="table-wrapper">

    <table class="table-clinicians">
        <thead>
            <tr>
                <th>S.no</th>
                <th>Title</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Clinician Id</th>
                <th>Clinician Speciality</th>
                <th>Age</th>
            </tr>
        </thead>


        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr onclick="window.location='/Admin/Clinicians/Details/@Model[i].ClinicianId'" style="cursor: pointer;">

                    <td>@(i + 1)</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].ClinicianLastName</td>
                    <td>@Model[i].ClinicianFirstName</td>
                    <td>@Model[i].ClinicianId</td>
                    <td>@Model[i].ClinicianSpeciality</td>
                    <td>@Model[i].ClinicianAge</td>
                </tr>
            }
        </tbody>
    </table>

</div>


<!-- Pagination -->
<div class="pagination-container">
    <a href="#" class="active">1</a>
    <a href="#">2</a>
    <a href="#">3</a>
    <a href="#">»</a>
</div>