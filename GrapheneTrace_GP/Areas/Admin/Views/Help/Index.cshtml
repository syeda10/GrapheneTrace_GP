@{
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">

    <h3 class="fw-bold mb-4">Help Centre</h3>

    <!-- Search Bar -->
    <div class="d-flex justify-content-center mb-4">
        <input id="helpSearch"
               type="text"
               class="form-control"
               placeholder="🔍 Search help topics…"
               style="max-width:450px; border-radius:25px;">
    </div>


    <!-- FAQ SECTION -->
    <h4 class="fw-bold mt-4">Frequently Asked Questions</h4>
    <div class="row g-4 mt-2 help-section">

        <div class="col-md-4 help-card" data-search="getting started setup navigation how to use">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Getting Started</h5>
                <p class="text-muted">Basic usage, navigation, creating profiles</p>
            </div>
        </div>

        <div class="col-md-4 help-card" data-search="account login password reset roles permissions">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Account & Login</h5>
                <p class="text-muted">Password resets, role permissions, login issues</p>
            </div>
        </div>

        <div class="col-md-4 help-card" data-search="alerts notifications priority unread critical">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Alerts & Notifications</h5>
                <p class="text-muted">Alert types, priority meanings, troubleshooting</p>
            </div>
        </div>

        <div class="col-md-4 help-card" data-search="clinicians doctors assigning patients edit details">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Clinicians</h5>
                <p class="text-muted">Managing clinicians, assigning patients</p>
            </div>
        </div>

        <div class="col-md-4 help-card" data-search="patients records editing issues">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Patients</h5>
                <p class="text-muted">Managing patient data and records</p>
            </div>
        </div>

        <div class="col-md-4 help-card" data-search="settings system preferences backup notifications general">
            <div class="p-4 border rounded shadow-sm h-100">
                <h5 class="fw-bold">Settings</h5>
                <p class="text-muted">System settings, privacy, backup and recovery</p>
            </div>
        </div>
    </div>


    <!-- TROUBLESHOOTING -->
    <h4 class="fw-bold mt-5">Troubleshooting</h4>
    <ul class="list-group mb-4 help-section">
        <li class="list-group-item help-card" data-search="not receiving alerts notification issue">
            Why am I not receiving alerts?
        </li>
        <li class="list-group-item help-card" data-search="clinician patient assign error cannot assign">
            Clinician not assigned to patient — what to do?
        </li>
        <li class="list-group-item help-card" data-search="database update not showing refresh migration">
            Database update not showing? How to refresh the system?
        </li>
        <li class="list-group-item help-card" data-search="forgot password reset admin access locked">
            Forgot admin password — recovery process
        </li>
        <li class="list-group-item help-card" data-search="slow performance loading speed">
            App running slow? Tips to improve performance
        </li>
    </ul>


    <!-- DOCUMENTATION -->
    <h4 class="fw-bold mt-5">Documentation</h4>
    <ul class="list-group mb-4 help-section">
        <li class="list-group-item help-card" data-search="manual documentation user guide">
            📄 Admin User Manual
        </li>
        <li class="list-group-item help-card" data-search="api reference technical developers">
            📄 API Reference (optional)
        </li>
        <li class="list-group-item help-card" data-search="data model database structure">
            📄 Data Model Overview
        </li>
        <li class="list-group-item help-card" data-search="release notes changes updates version">
            📄 Release Notes
        </li>
    </ul>

</div>



