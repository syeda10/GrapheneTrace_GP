@model GrapheneTrace_GP.Areas.Admin.ViewModels.PatientDetailsVM


    

    <div class="container-fluid mt-4">

        <!-- PAGE TITLE -->
        <h3 class="fw-bold mb-4">
            Patients Data > @Model.FirstName @Model.LastName
        </h3>

        <div class="row g-4">

            <!-- LEFT CARD : BASIC INFO -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <h4 class="text-primary">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>

                    <p class="fw-bold">Patient ID</p>
                    <p>@Model.Id</p>

                    <!-- Status Badge -->
                    <span class="badge
                      @(Model.Status == "Active" ? "bg-success" : 
                               Model.Status == "Alert" ? "bg-danger" : "bg-secondary")">
                        @Model.Status
                    </span>

                    <button class="btn btn-outline-primary w-100 mt-3">
                        Send Message
                    </button>

                </div>
            </div>

            <!-- MIDDLE CARD : PERSONAL INFO -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Date Of Birth:</strong> @Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                    <p><strong>City:</strong> @Model.City</p>
                    <p><strong>Phone No:</strong> @Model.Phone</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <p><strong>Postal Code:</strong> @Model.PostCode</p>

                </div>
            </div>

            <!-- RIGHT CARD : PRESSURE HEATMAP -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <h5 class="fw-bold">Pressure Data</h5>

                    <div class="heatmap-box"
                         style="height:300px; overflow:auto; background:#fafafa; border:1px solid #ddd;">

                        @if (Model.HeatMapData?.Count > 0)
                        {
                            <table class="table table-sm m-0 p-0">
                                @foreach (var row in Model.HeatMapData)
                                {
                                    <tr>
                                        @foreach (var cell in row)
                                        {
                                            <td style="width:8px; height:8px; background:rgba(255,0,0,@(cell / 100)); padding:0;"></td>
                                        }
                                    </tr>
                                }
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">No heatmap data available.</p>
                        }

                    </div>
                </div>
            </div>

        </div>

        <hr class="my-4" />

        <!-- TABS FOR APPOINTMENTS -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#allAppointments">
                All Appointments
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#completedAppointments">
                Completed
            </button>
        </li>
    </ul>


        <div class="tab-content">

            <!-- ALL APPOINTMENTS TAB -->
            <div class="tab-pane fade show active" id="allAppointments">

                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Treatment</th>
                            <th>Comments</th>
                            <th>Next Appointment</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var a in Model.AllAppointments)
                        {
                            <tr>
                                <td>@a.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                <td>@a.TreatmentType</td>
                                <td>@a.Comments</td>
                                <td>@a.NextAppointment</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <!-- COMPLETED APPOINTMENTS TAB -->
            <div class="tab-pane fade" id="completedAppointments">

                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Treatment</th>
                            <th>Comments</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var c in Model.CompletedAppointments)
                        {
                            <tr>
                                <td>@c.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                <td>@c.TreatmentType</td>
                                <td>@c.Comments</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

        </div>

    </div>




