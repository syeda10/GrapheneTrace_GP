@model GrapheneTrace_GP.Areas.Admin.ViewModels.PatientDetailsVM


    

    <div class="container-fluid mt-4">

        <!-- PAGE TITLE -->
        <h3 class="fw-bold mb-4">
            Patients Data > @Model.FirstName @Model.LastName
        </h3>

        <div class="row g-4">

            <!-- LEFT CARD : BASIC INFO -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <h4 class="text-primary">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>

                    <p class="fw-bold">Patient ID</p>
                    <p>@Model.Id</p>

                    <!-- Status Badge -->
                    <span class="badge
                      @(Model.Status == "Active" ? "bg-success" : 
                               Model.Status == "Alert" ? "bg-danger" : "bg-secondary")">
                        @Model.Status
                    </span>

                    <button class="btn btn-outline-primary w-100 mt-3">
                        Send Message
                    </button>

                </div>
            </div>

            <!-- MIDDLE CARD : PERSONAL INFO -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Date Of Birth:</strong> @Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                    <p><strong>City:</strong> @Model.City</p>
                    <p><strong>Phone No:</strong> @Model.Phone</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                    <p><strong>Postal Code:</strong> @Model.PostCode</p>

                </div>
            </div>

            <!-- RIGHT CARD : PRESSURE HEATMAP -->
            <div class="col-md-4">
                <div class="card shadow-sm p-3">

                    <h5 class="fw-bold">Pressure Data</h5>

                    <div class="heatmap-box"
                         style="height:300px; overflow:auto; background:#fafafa; border:1px solid #ddd;">

                        @if (Model.HeatMapData?.Count > 0)
                        {
                            <table class="table table-sm m-0 p-0">
                                @foreach (var row in Model.HeatMapData)
                                {
                                    <tr>
                                        @foreach (var cell in row)
                                        {
                                            <td style="width:8px; height:8px; background:rgba(255,0,0,@(cell / 100)); padding:0;"></td>
                                        }
                                    </tr>
                                }
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">No heatmap data available.</p>
                        }

                    </div>
                </div>
            </div>

        </div>

   
    <hr />
    <h3>Appointments</h3>

    @if (Model.AllAppointments != null && Model.AllAppointments.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>Date</th>
                    <th>Treatment</th>
                    <th>Comments</th>
                    <th>Next Appointment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model.AllAppointments)
                {
                    <tr>
                        <td>@appt.AppointmentDate.ToString("dd/MM/yyyy")</td>
                        <td>@appt.TreatmentType</td>
                        <td>@appt.Comments</td>
                        <td>@appt.NextAppointment</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No appointments available.</p>
    }

    <h3>Completed Appointments</h3>

    @if (Model.CompletedAppointments != null && Model.CompletedAppointments.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-success">
                <tr>
                    <th>Date</th>
                    <th>Treatment</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appt in Model.CompletedAppointments)
                {
                    <tr>
                        <td>@appt.AppointmentDate.ToString("dd/MM/yyyy")</td>
                        <td>@appt.TreatmentType</td>
                        <td>@appt.Comments</td>
                    </tr>
                }
            </tbody>
        </table>
    }
       else
       {
        <p>No completed appointments.</p>
       }


</div>




