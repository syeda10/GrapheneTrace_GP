@model GrapheneTrace_GP.Areas.Admin.ViewModels.AddPatient.Step03AssignmentsVM

<form method="post" asp-action="Step03Post">
    <select asp-for="ClinicianId" class="form-control">
        <option value="">Select Clinician</option>
        @foreach (var c in ViewBag.Clinicians)
        {
            <option value="@c.Id">@c.FirstName @c.LastName</option>
        }
    </select>

    <input asp-for="Ward" class="form-control" placeholder="Ward" />
    <input asp-for="Room" class="form-control" placeholder="Room" />
    <input asp-for="Status" class="form-control" placeholder="Status" />

    <button class="btn btn-primary">Next</button>
</form>
